<div>
<div class="container-module">
<div class="tabs">
<ul class="nav nav-tabs my-tabs" id="tabs-{{ module }}">
    {% if (latest_products) %}
		<li class="active"><a data-toggle="tab" title="{{ tab_latest }}" href="#tab-latest-{{ module }}">{{ tab_latest }}</a></li>
	{% endif %}
	 {% if (featured_products) %}
		<li><a data-toggle="tab" title="{{ tab_featured }}" href="#tab-featured-{{ module }}">{{ tab_featured }}</a></li>
	{% endif %}
	{% if (bestseller_products) %}
		<li><a data-toggle="tab" title="{{ tab_bestseller }}" href="#tab-bestseller-{{ module }}">{{ tab_bestseller }}</a></li>
	{% endif %}
	{% if (special_products) %}
		<li><a data-toggle="tab" title="{{ tab_special }}" href="#tab-special-{{ module }}">{{ tab_special }}</a></li>
	{% endif %}
    {% if (popular_products) %}
		<li><a data-toggle="tab" title="{{ tab_popular }}" href="#tab-popular-{{ module }}">{{ tab_popular }}</a></li>
	{% endif %}
</ul>
</div>
<div class="tab-content">
	{% if (latest_products) %}
		<div id="tab-latest-{{ module }}" class="tab-pane fade in active">
			<div class="product-slider">
				<div class="container-modules tab-latest-{{ module }} owl-carousel">
					{% for product in latest_products %}
						<div class="item">
							<div class="product-thumb transition">
							<div class="image">
							<div class="stickers-ns">
								{% if ((on_off_sticker_special == '1') and product['special']) %}
									<div class="sticker-ns special">
										{% if (config_change_icon_sticker_special is not empty) %}<i class="fa {{ config_change_icon_sticker_special }} "></i>{% endif %}
										<span>{{ text_sticker_special[lang_id]['config_change_text_sticker_special'] }}</span>
									</div>
								{% endif %}
								{% if ((on_off_sticker_topbestseller == '1') and (product['top_bestsellers'] >= config_limit_order_product_topbestseller)) %}
									<div class="sticker-ns bestseller">
										{% if (config_change_icon_sticker_topbestseller is not empty) %}<i class="fa {{ config_change_icon_sticker_topbestseller }} "></i>{% endif %}
										<span>{{ text_sticker_topbestseller[lang_id]['config_change_text_sticker_topbestseller'] }}</span>
									</div>
								{% endif %}
								{% if ((on_off_sticker_popular == '1') and (product['viewed']>=config_min_quantity_popular)) %}
									<div class="sticker-ns popular">
										{% if (config_change_icon_sticker_popular is not empty) %}<i class="fa {{ config_change_icon_sticker_popular }} "></i>{% endif %}
										<span>{{ text_sticker_popular[lang_id]['config_change_text_sticker_popular'] }}</span>
									</div>
								{% endif %}
								{% if ((on_off_sticker_newproduct == '1') and product.sticker_new_prod ) %}
									<div class="sticker-ns newproduct">
										{% if (config_change_icon_sticker_newproduct is not empty) %}<i class="fa {{ config_change_icon_sticker_newproduct }}"></i>{% endif %}
										{{ text_sticker_newproduct[lang_id]['config_change_text_sticker_newproduct'] }}
									</div>
								{% endif %}
							</div>
							{% if (setting_module['status_additional_image_hover'] is defined and (setting_module['status_additional_image_hover'] == '1')) %}
								<a href="{{ product['href'] }}"><img {% if (product['product_quantity'] <= 0 and show_stock_status) %}data-status="{{ product['stock_status'] }}"{% endif %} {% if (product['additional_image_hover']) %}data-additional-hover="{{ product['additional_image_hover'] }}"{% endif %} {% if (lazyload_module) %}data-src="{{ product['thumb'] }}" src="{{ lazy_image }}" {% else %}src="{{ product['thumb'] }}"{% endif %} alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive {% if (lazyload_module) %}lazyload{% endif %}" /></a>
							{% else %}
								<a href="{{ product['href'] }}"><img {% if (product['product_quantity'] <= 0 and show_stock_status) %}data-status="{{ product['stock_status'] }}"{% endif %} {% if (lazyload_module) %}data-src="{{ product['thumb'] }}" src="{{ lazy_image }}" {% else %}src="{{ product['thumb'] }}"{% endif %} alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive {% if (lazyload_module) %}lazyload{% endif %}" /></a>
							{% endif %}
							{% if (show_special_timer_module == '1' and product['special']) %}
								<div class="action-timer">
									<div id="countdown-tab-latest-{{ module }}-{{ product['product_id'] }}"></div>
								</div>
								<script>
								$(function(){
									var note = $('#note');
									var parts_date ='{{ product['date_end'] }}'.split('-');
									var ts = new Date(parts_date[0], parts_date[1] - 1, parts_date[2]);
									if((new Date()) > ts){
										ts = (new Date()).getTime() + 10*24*60*60*1000;
									}
									$('#countdown-tab-latest-{{ module }}-{{ product['product_id'] }}').countdown({
										timestamp	: ts,
										callback	: function(days, hours, minutes, seconds){
										var message = "";
										message += days;
										message += hours;
										message += minutes;
										message += seconds;
										note.html(message);
										}
									});
								});

								</script>
							{% endif %}
						</div>
						<div class="caption">
							<div class="product-name"><a href="{{ product['href'] }}">{{ product['name'] }}</a></div>
							{% if (setting_module['status_model'] is defined and (setting_module['status_model'] == '1')) %}
							<div class="product-model">{{ product['model']}}</div>
							{% endif %}
							{% if (setting_module['status_description'] is defined and (setting_module['status_description'] == '1')) %}
							<div class="product-description">{{ product['description'] }}</div>
							{% endif %}
							{% if (show_options) %}
								<div id="option_tablatest{{ module }}_{{ product['product_id'] }}" class="option tablatest-opt">
									{% for key,option in product['options'] %}
										{% if (option['type'] == 'select') %}
											<div class="form-group">
												<label class="control-label">{{ option['name'] }}</label>
												<div id="input-option-tablatest{{ option['product_option_id'] }}">
													<select onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" name="option[{{ option['product_option_id'] }}]" id="input-value-{{ option['product_option_id'] }}_tablatest" class="form-control">
														<option value="">{{ text_select }}</option>
														{% for option_value in option['product_option_value'] %}
														<option data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" value="{{ option_value['product_option_value_id'] }}">{{ option_value['name'] }}
														{% if (option_value['price']) %}
														({{ option_value['price_prefix'] }}{{ option_value['price'] }})
														{% endif %}
														</option>
														{% endfor %}
													</select>
											  </div>
											</div>
										{% endif %}
										{% if (option['type'] == 'radio') %}
										<div class="form-group">
											<label class="control-label">{{ option['name'] }}</label>
										  <div id="input-option-tablatest{{ option['product_option_id'] }}">
											{% for option_value in option['product_option_value'] %}
												{% if (option_value['image'] or option_value['color']) %}
													{% if (option['status_color_type'] == '1') %}
														<div class="image-radio">
														  <label>
															<input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="radio" name="option[{{ option['product_option_id'] }}]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
																<span for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" class="color-option" data-toggle="tooltip" title="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" style="background-color:{{ option_value['color']}}"></span>
														  </label>
														</div>
													{% else %}
														<div class="image-radio">
														  <label>
															<input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="radio" name="option[{{ option['product_option_id'] }}]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
																<span class="image-option">
																<img for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" src="{{ option_value['image'] }}" alt="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" class="img-thumbnail" data-toggle="tooltip" title="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" />
														  		</span>
														  </label>
														</div>
													{% endif %}
												{% else %}
													<div class="radio-checbox-options">
														<input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="radio" name="option[{{ option['product_option_id'] }}]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
														<label for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest">
															<span class="option-name">{{ option_value['name'] }}</span>
															{% if (option_value['price']) %}
															<span class="option-price">{{ option_value['price_prefix'] }}{{ option_value['price'] }}</span>
															{% endif %}
														</label>
													</div>
												{% endif %}
											{% endfor %}
										  </div>
										</div>
										{% endif %}

										{% if (option['type'] == 'checkbox') %}
										<div class="form-group">
										  <label class="control-label">{{ option['name'] }}</label>
										  <div id="input-option-tablatest{{ option['product_option_id'] }}">
											{% for option_value in option['product_option_value'] %}
												{% if (option_value['image'] or option_value['color']) %}
													{% if (option['status_color_type'] == '1') %}
														<div class="image-radio">
														  <label>
															<input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="checkbox" name="option[{{ option['product_option_id'] }}][]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
																<span for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" class="color-option" data-toggle="tooltip" title="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" style="background-color:{{ option_value['color']}}"></span>
														  </label>
														</div>
													{% else %}
														<div class="image-radio">
														  <label>
															<input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="checkbox" name="option[{{ option['product_option_id'] }}][]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
																<span class="image-option">
																<img for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" src="{{ option_value['image'] }}" alt="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" class="img-thumbnail" data-toggle="tooltip" title="{{ option_value['name'] ~ (option_value['price'] is not empty ? ' ' ~ option_value['price_prefix'] ~ option_value['price'] : '') }}" />
														  		</span>
														  </label>
														</div>
													{% endif %}
												{% else %}
													<div class="radio-checbox-options">
													  <input data-option-prefix="{{ option_value['price_prefix'] }}" data-option-price="{{ option_value['price_value'] }}" onchange="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" type="checkbox" name="option[{{ option['product_option_id'] }}][]" value="{{ option_value['product_option_value_id'] }}" id="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest" />
														<label for="input-value-{{ option['product_option_id'] }}_{{ option_value['product_option_value_id'] }}_tablatest">
														<span class="option-name">{{ option_value['name'] }}</span>
															{% if (option_value['price']) %}
															<span class="option-price">{{ option_value['price_prefix'] }}{{ option_value['price'] }}</span>
															{% endif %}
													  </label>
													</div>
												{% endif %}
											{% endfor %}
										  </div>
										</div>
										{% endif %}
								{% endfor %}
								</div>
							{% endif %}
								{% if (setting_module['status_rating'] is defined and (setting_module['status_rating'] == '1')) %}
									<div class="rating">
										<span class="rating-box">
											{% set i = 1 %}{% for i in i..5 %}
												{% if (product['rating'] < i) %}
													<span class="product-rating-star">
														<svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
															<path fill-rule="evenodd" clip-rule="evenodd" d="M5.5 8.75L3.47287 9.81573C2.73924 10.2014 1.88181 9.57846 2.02192 8.76155L2.40907 6.50431L0.769082 4.90572C0.175565 4.32718 0.503075 3.31921 1.3233 3.20002L3.5897 2.87069L4.60326 0.816985C4.97008 0.0737394 6.02992 0.0737402 6.39674 0.816986L7.4103 2.87069L9.67671 3.20002C10.4969 3.31921 10.8244 4.32718 10.2309 4.90572L8.59093 6.50431L8.97808 8.76155C9.11819 9.57846 8.26076 10.2014 7.52713 9.81573L5.5 8.75Z" fill="#EFEFEF"/>
														</svg>
													</span>
												{% else %}
													<span class="product-rating-star">
														<svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
															<path fill-rule="evenodd" clip-rule="evenodd" d="M5.5 8.75L3.47287 9.81573C2.73924 10.2014 1.88181 9.57846 2.02192 8.76155L2.40907 6.50431L0.769082 4.90572C0.175565 4.32718 0.503075 3.31921 1.3233 3.20002L3.5897 2.87069L4.60326 0.816985C4.97008 0.0737394 6.02992 0.0737402 6.39674 0.816986L7.4103 2.87069L9.67671 3.20002C10.4969 3.31921 10.8244 4.32718 10.2309 4.90572L8.59093 6.50431L8.97808 8.76155C9.11819 9.57846 8.26076 10.2014 7.52713 9.81573L5.5 8.75Z" fill="#E5DB77"/>
														</svg>
													</span>
												{% endif %}
											{% endfor %}
											{% if (setting_module['status_quantity_reviews'] is defined and (setting_module['status_quantity_reviews'] == '1')) %}
												<span class="quantity-reviews"><a data-placement="right"  data-toggle="tooltip" title="{{ text_reviews_title }}" href="{{ product['href'] }}#tab-review">{{ product['reviews'] }}</a></span>
											{% endif %}
										</span>
									</div>
								{% endif %}
								<div class="pq-box">
								{% if (product['price']) %}
								<div class="price">
								{% if (not product['special']) %}
								<span class="price_no_format_{{ product['product_id'] }}">{{ product['price'] }}</span>
								{% else %}
								<span class="price-old"><span class="price_no_format_{{ product['product_id'] }}">{{ product['price'] }}</span></span>
								{% if ((on_off_percent_discount == '1') and product['special']) %}
								<div class="stickers-skidka"><div class="sticker-ns procent-skidka">{{ product['skidka'] }} %</div></div>
								{% endif %}
								<span class="price-new"><span class="special_no_format_{{ product['product_id'] }}">{{ product['special'] }}</span></span>
								{% endif %}
								{% if (product['tax']) %}
								<span class="price-tax">{{ text_tax }} {{ product['tax'] }}</span>
								{% endif %}
								</div>
								{% if (setting_module['status_actions'] is not defined) %}
								{% if (config_additional_settings_newstore['quantity_btn_module'] is defined and (config_additional_settings_newstore['quantity_btn_module'] == '1')) %}
									<div class="quantity_plus_minus">
										<span class="add-up add-action fa fa-angle-up" onclick="btnplus_cat_price_tab_latest{{ product['product_id'] }}('{% if (config_additional_settings_newstore['quantity_multiple'] is defined and (config_additional_settings_newstore['quantity_multiple'] == '1')) %}{{ product['minimum'] }}{% else %}1{% endif %}');"></span>
										<input type="text" class="quantity-num form-control input-number-quantity{{ product['product_id'] }}" name="quantity" {% if (config_additional_settings_newstore['quantity_multiple'] is defined and (config_additional_settings_newstore['quantity_multiple'] == '1') and product['minimum'] > 1) %}disabled{% endif %} id="input_quantity_mod_tab_latest{{ product['product_id'] }}" onkeyup="validate_quantity(this,'{{ product['minimum'] }}')" oninput="recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }}, {{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');" value="{{ product['minimum'] }}">
										<span class="add-down add-action fa fa-angle-down" onclick="btnminus_cat_price_tab_latest{{ product['product_id'] }}('{% if (config_additional_settings_newstore['quantity_multiple'] is defined and (config_additional_settings_newstore['quantity_multiple'] == '1')) %}{{ product['minimum'] }}{% else %}1{% endif %}');"></span>
									</div>
									<script>
									{% if (config_additional_settings_newstore['price_recalc'] is defined and (config_additional_settings_newstore['price_recalc'] == '1') and product['minimum'] > 1) %}
										$(window).load(function() {
											recalc_quantity({{ product['product_id'] }},{{ product['minimum'] }},{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');
										});
									{% endif %}
										function btnminus_cat_price_tab_latest{{ product['product_id'] }}(minimum){
											var $input = $('#input_quantity_mod_tab_latest{{ product['product_id'] }}');
											var count = parseInt($input.val()) - parseInt(minimum);
											count = count < parseInt({{ product['minimum'] }}) ? parseInt({{ product['minimum'] }}) : count;
											$input.val(count);
											$input.change();
											recalc_quantity({{ product['product_id'] }},count,{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');
										}
										function btnplus_cat_price_tab_latest{{ product['product_id'] }}(minimum){
											var $input = $('#input_quantity_mod_tab_latest{{ product['product_id'] }}');
											var count = parseInt($input.val()) + parseInt(minimum);
											$input.val(count);
											$input.change();
											recalc_quantity({{ product['product_id'] }},count,{{ product['price_no_format'] }},'{{ product['special_no_format'] }}','.tab-latest-{{ module }}','tablatest{{ module }}');
										};
									</script>
								{% endif %}
								{% endif %}
								{% endif %}
								</div>
								{% if (setting_module['status_actions'] is not defined) %}
								<div class="actions">
									<div class="cart"><button class="btn btn-general" type="button" {% if ((product['product_quantity'] <= 0) and (disable_cart_button == 1)) %}disabled data-toggle="tooltip" title="{{ disable_cart_button_text }}"{% else %}onclick="cart.add('{{ product['product_id'] }}','tablatest{{ module }}',get_cart_quantity('{{ product['product_id'] }}','.tab-latest-{{ module }}'));"{% endif %}>{% if (change_text_cart_button_out_of_stock == 1 and product['product_quantity'] <= 0) %}<i class="fa fa-lock" aria-hidden="true"></i> <span>{{ disable_cart_button_text }}</span>{% else %}<img src="catalog/view/theme/cyberstore/image/addtocart-icon.svg" alt="{{ button_cart }}" /> <span>{{ button_cart }}</span>{% endif %}</button></div>
									<div class="addit-action">
									{% if (config_on_off_latest_quickview == '1') %}
										<div class="quickview"><button class="btn btn-quickview" onclick="quickview_open({{ product['product_id']}},'{{ all_prod_latest is defined ? all_prod_latest : 0 }}');"><i class="fa fa-eye" aria-hidden="true"></i> <span>{{ config_quickview_btn_name[lang_id]['config_quickview_btn_name'] }}</span></button></div>
									{% endif %}
									{% if (setting_module['status_fastorder'] is defined and (setting_module['status_fastorder'] == '1')) %}
										{% if ((not disable_fastorder_button and ((product['product_quantity'] <= 0) or product['product_quantity'] > 0)) or (disable_fastorder_button and product['product_quantity'] > 0)) %}
										<div class="quick-order">
											<button class="btn btn-fastorder" type="button" data-toggle="tooltip" onclick="fastorder_open({{ product['product_id']}});" title="{{ config_text_open_form_send_order[lang_id]['config_text_open_form_send_order'] }}" {% if ((product['product_quantity'] <= 0) and disable_fastorder_button) %}disabled{% endif %}>
												{% if (icon_open_form_send_order != '') %}
													<i class="{{ icon_open_form_send_order }} fa-fw"></i>
												{% else %}
													<img alt="{{ config_text_open_form_send_order[lang_id]['config_text_open_form_send_order'] }}" src="catalog/view/theme/cyberstore/image/fastorder-icon.svg" />
												{% endif %}
											</button>
										</div>
										{% endif %}
									{% endif %}
									{% if (setting_module['status_wishlist'] is defined and (setting_module['status_wishlist'] == '1')) %}
										<div class="wishlist"><button class="btn btn-wishlist" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product['product_id'] }}');"><img alt="{{ button_wishlist }}" src="catalog/view/theme/cyberstore/image/wishlist-icon.svg" /></button></div>
